---
import { Image } from "astro:assets";
import Layout from "../layout/Layout.astro";

import heroImage from "@assets/img/about-us/bgBanner.jpg";
import parallaxImage from "@assets/img/about-us/parallax.jpg";
import presenceImage from "@assets/img/about-us/presencia.jpg";
import placeholderImage from "@assets/img/about-us/placeholder.jpg";
import logoRegulus from "@assets/img/about-us/logoRegulus.png";
import logoSujio from "@assets/img/about-us/logoSujio.png";
import logoHHGM from "@assets/img/about-us/logoHHGM.png";
import trendIcon from "@assets/svg/about-us/trend-up.svg";

const strengths = [
  "Equipo con +80 años de experiencia.",
  "Presencia internacional y una sólida operación en México.",
  "Promovemos prácticas que favorezcan la eficiencia energética.",
  "Evaluamos el uso de energías limpias para brindar soluciones eficientes, confiables y sostenibles.",
  "Facilitamos el desarrollo de proyectos de gran escala que impulsen el crecimiento nacional y regional.",
];

const companies = [
  {
    name: "Regulus Energia",
    logo: logoRegulus,
    description: "Comercializadora de energía limpia y potencia.",
    highlight: "¿Por qué Regulus?",
    bullets: [
      "Soluciones integrales para las necesidades del cliente.",
      "Transforma datos en análisis concretos.",
      "Asegurando rentabilidad.",
      "Brinda información estratégica que apoya la toma de decisiones.",
    ],
  },
  {
    name: "Sujio",
    logo: logoSujio,
    description: "Ofrece servicios de suministro eléctrico a los grandes consumidores.",
    highlight: "¿Por qué Sujio?",
    bullets: [
      "Costos de energía más bajos para sus necesidades del cliente.",
      "Suministro eléctrico con garantía de generación limpia acreditada.",
      "Acompañamiento de la normatividad vigente en instalaciones eléctricas.",
    ],
  },
  {
    name: "HHGM",
    logo: logoHHGM,
    description:
      "Construcción de infraestructura eléctrica y suministro de materiales.",
    highlight: "¿Por qué HHGM?",
    bullets: [
      "Monitoreo en servicios para mercados eléctricos mayorista y centros de infraestructura eléctrica de punta.",
      "Venta de servicios de ahorro de energía por medio de soluciones de generación de energía eficiente, confiable y sostenible.",
      "Alianzas estratégicas con fabricantes de equipos eléctricos de México.",
    ],
  },
];

const clientSegments = [
  "Empresas que prestan servicios",
  "Parques industriales y polos de desarrollo",
  "Proveedores de espacios logísticos de almacenamiento, incluidos centros de datos.",
  "Sector Automotriz (proveedores Tier 1 y Tier 2)",
  "Industria alimentaria y agropecuaria",
  "Manufacturas y empresas de transformación",
];

const events = [
  "México Infrastructure Project Forum, Monterrey, México",
  "10° Encuentro Latinoamericano de Energía, Cali, Colombia",
  "14° Congreso Conjunto de Asociaciones de Energía, CDMX",
  "Foro del Senado de la República",
  "C. R. Valenzuela",
];
---

<Layout title="Quiénes somos | Volta">
  <section class="relative overflow-hidden">
    <div class="grid min-h-[60vh] lg:grid-cols-[1.05fr_1.45fr]">
      <div class="bg-primary text-white">
        <div class="container mx-auto flex h-full flex-col justify-center gap-6 px-6 py-12 lg:px-12">
          <h1 class="text-2xl font-semibold leading-tight sm:text-3xl lg:text-4xl">
            VOLTA: Impulsando la industria energética con soluciones responsables
          </h1>
          <p class="text-base leading-relaxed text-white/90 lg:text-lg">
            Somos una empresa dedicada al desarrollo de infraestructura eléctrica
            de alto impacto; con ello, buscamos potenciar los recursos de las
            empresas en el sector energético y desarrollar proyectos con energías
            renovables.
          </p>
        </div>
      </div>
      <div class="relative min-h-[320px]">
        <Image
          src={heroImage}
          alt="Paneles solares en infraestructura energética"
          class="h-full w-full object-cover"
        />
        <div class="absolute inset-0 bg-black/10"></div>
      </div>
    </div>
    <div
      class="pointer-events-none absolute top-0 left-[45%] hidden h-full w-44 -skew-x-12 bg-primary/95 lg:block"
    ></div>
  </section>

  <section class="relative">
    <Image
      src={parallaxImage}
      alt="Planta solar con vista aérea"
      class="absolute inset-0 h-full w-full object-cover"
    />
    <div class="absolute inset-0 bg-black/60"></div>
    <div class="relative container mx-auto px-6 py-16 text-white lg:py-20">
      <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
        {strengths.map((item) => (
          <div class="flex flex-col items-center gap-4 text-center">
            <div class="flex size-14 items-center justify-center rounded-full bg-primary">
              <Image src={trendIcon} alt="Indicador" class="size-6" />
            </div>
            <p class="text-sm leading-relaxed text-white/90 lg:text-base">
              {item}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-white py-12">
    <div class="container mx-auto px-6 text-center">
      <p class="mx-auto max-w-4xl text-sm leading-relaxed text-black/70 sm:text-base">
        Nuestras estrategias promueven la reducción de emisiones, alineando
        nuestras acciones con los objetivos globales de descarbonización. De esta
        manera, contribuimos al desarrollo de infraestructura que respalda una
        transición energética, realista y responsable.
      </p>
    </div>
  </section>

  <section class="bg-white pb-16">
    <div class="container mx-auto px-6">
      <div class="text-center">
        <h2 class="text-2xl font-semibold lg:text-3xl">
          Quiénes conforman Grupo VOLTA
        </h2>
        <p class="mt-2 text-sm text-black/70">
          Regulus, Sujio y HHGM son marcas de VOLTA que brindan distintas
          soluciones en la industria energética.
        </p>
      </div>

      <div class="mt-10 grid gap-8 lg:grid-cols-3">
        {companies.map((company) => (
          <article class="overflow-hidden rounded-2xl border border-black/10 bg-white shadow-sm">
            <div class="relative">
              <Image
                src={placeholderImage}
                alt="Equipo de trabajo"
                class="h-44 w-full object-cover"
              />
              <div class="absolute left-6 -bottom-6 flex size-14 items-center justify-center rounded-full bg-white shadow">
                <Image src={company.logo} alt={company.name} class="size-10 object-contain" />
              </div>
            </div>
            <div class="px-6 pb-6 pt-10">
              <h3 class="text-base font-semibold uppercase tracking-wide">
                {company.name}
              </h3>
              <p class="mt-2 text-sm text-black/70">{company.description}</p>
              <p class="mt-4 text-sm font-semibold">{company.highlight}</p>
              <ul class="mt-3 list-disc space-y-2 pl-4 text-sm text-black/70">
                {company.bullets.map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="container mx-auto px-6">
      <h2 class="text-center text-2xl font-semibold lg:text-3xl">
        Quiénes son nuestros clientes
      </h2>
      <div class="mt-10 grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {clientSegments.map((segment, index) => (
          <div
            class:list={[
              "rounded-lg px-6 py-5 text-center text-sm font-medium text-white",
              "skew-x-[-8deg]",
              index % 2 === 0 ? "bg-primary" : "bg-red-700",
            ]}
          >
            <span class="block skew-x-[8deg] leading-relaxed">{segment}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-white pb-16">
    <div class="container mx-auto grid gap-10 px-6 lg:grid-cols-[1fr_1.2fr]">
      <div>
        <h2 class="text-2xl font-semibold lg:text-3xl">
          Nuestra presencia en eventos nacionales e internacionales
        </h2>
        <ol class="mt-6 list-decimal space-y-3 pl-5 text-sm text-black/70">
          {events.map((event) => (
            <li>{event}</li>
          ))}
        </ol>
      </div>
      <div class="relative overflow-hidden rounded-2xl">
        <Image
          src={presenceImage}
          alt="Equipo VOLTA en evento"
          class="h-full w-full object-cover"
        />
        <div class="absolute bottom-4 left-1/2 flex -translate-x-1/2 gap-2">
          {Array.from({ length: 5 }).map((_, index) => (
            <span
              class:list={[
                "h-2 w-2 rounded-full",
                index === 2 ? "bg-white" : "bg-white/50",
              ]}
            ></span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white pb-20">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-2xl font-semibold lg:text-3xl">
        Contáctanos para conocer cómo potenciar tus recursos energéticos
      </h2>
      <button
        class="mt-6 rounded-full bg-primary px-6 py-2 text-sm font-semibold text-white transition hover:bg-amber-600"
        type="button"
      >
        Contáctanos
      </button>
    </div>
  </section>
</Layout>
