---
interface Props {
  title?: string;
  button?: string;
  href?: string;
}
const { title, button, href } = Astro.props;
---

<section class="bg-white py-16 text-black lg:py-24">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-2xl font-medium lg:text-4xl max-w-4xl mx-auto">
      {
        title ||
          "Contáctanos para conocer la solución ideal para tus necesidades."
      }
    </h2>
    <a
      href={href || "/contacto"}
      class="mt-6 inline-flex items-center justify-center rounded-full bg-primary
       px-8 py-3 lg:px-16 text-base lg:text-2xl font-medium text-white shadow-sm transition
        hover:bg-primary/90"
    >
      {button || "Contáctanos"}
    </a>
  </div>
</section>
