---
import { Image } from "astro:assets";
import approachImage from "@assets/img/home/placasSolares.jpg";
import iconAnalysis from "@assets/svg/home/Scan_alt.svg";
import iconCommitment from "@assets/svg/home/lightning.svg";
import iconInvestment from "@assets/svg/home/Line_up.svg";
---

<section class="relative text-white">
  <div class="absolute inset-0">
    <Image
      src={approachImage}
      alt="Equipo de trabajo en planta solar"
      class="h-full w-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  <div class="relative container mx-auto px-4 py-16">
    <div class="grid gap-8 lg:grid-cols-[1fr_2fr] lg:items-center">
      <h2 class="text-2xl font-semibold lg:text-4xl">
        Nuestro enfoque<br />combina
      </h2>
      <div class="grid gap-6 md:grid-cols-3">
        <div class="flex flex-col items-center lg:items-start gap-3">
          <div class="rounded-lg bg-primary p-3">
            <Image
              src={iconAnalysis}
              alt="Análisis"
              class="size-8 lg:size-12"
            />
          </div>
          <h3 class="text-base lg:text-lg font-semibold">Análisis</h3>
          <p class="text-base lg:text-lg text-white/90">
            Análisis estratégico y gestión inteligente de riesgos.
          </p>
        </div>
        <div class="flex flex-col items-center lg:items-start gap-3">
          <div class="rounded-lg bg-primary p-3">
            <Image
              src={iconCommitment}
              alt="Compromiso"
              class="size-8 lg:size-12"
            />
          </div>
          <h3 class="text-base lg:text-lg font-semibold">Compromiso</h3>
          <p class="text-base lg:text-lg text-white/90">
            Compromiso con la cadena de valor.
          </p>
        </div>
        <div class="flex flex-col items-center lg:items-start gap-3">
          <div class="rounded-lg bg-primary p-3">
            <Image
              src={iconInvestment}
              alt="Inversión"
              class="size-8 lg:size-12"
            />
          </div>
          <h3 class="text-base lg:text-lg font-semibold">Inversión</h3>
          <p class="text-base lg:text-lg text-white/90">
            Inversiones en energías renovables.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
