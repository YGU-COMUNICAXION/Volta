---
import { Image } from "astro:assets";

interface Company {
  name: string;
  logo: ImageMetadata;
  description: string;
  highlight: string;
  bullets: string[];
}

interface Props {
  companies: Company[];
  placeholderImage: ImageMetadata;
}

const { companies, placeholderImage } = Astro.props;
---

<section class="bg-white pb-16">
  <div class="container mx-auto px-6">
    <div class="text-center">
      <h2 class="text-2xl font-medium lg:text-4xl">
        Quiénes conforman Grupo VOLTA
      </h2>
      <p
        class="mt-2 text-sm text-black/70 font-normal sm:text-base lg:text-2xl"
      >
        Regulus, Sujio y HHGM son marcas de VOLTA que brindan distintas
        soluciones en la industria energética.
      </p>
    </div>

    <div class="mt-10 grid gap-8 lg:grid-cols-3">
      {
        companies.map((company) => (
          <article class="overflow-hidden rounded-2xl border border-black/10 bg-white shadow-sm">
            <div class="relative">
              <Image
                src={placeholderImage}
                alt="Equipo de trabajo"
                class="h-44 w-full object-cover"
              />
              <div
                class="absolute left-6 -bottom-6 flex size-14 lg:size-32 border-4 border-white
               items-center justify-center rounded-full bg-primary shadow"
              >
                <Image
                  src={company.logo}
                  alt={company.name}
                  class="size-10 lg:size-24 object-contain"
                />
              </div>
            </div>
            <div class="px-6 pb-6 pt-10">
              <h3 class="text-lg lg:text-2xl font-medium uppercase tracking-wide">
                {company.name}
              </h3>
              <p class="mt-2 text-sm lg:text-base text-black/70">
                {company.description}
              </p>
              <p class="mt-4 text-sm lg:text-base font-medium italic">
                {company.highlight}
              </p>
              <ul class="mt-3  text-sm lg:text-base list-disc space-y-2 pl-4 text-sm text-black/70">
                {company.bullets.map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
