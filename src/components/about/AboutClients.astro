---
interface Props {
  segments: string[];
}

const { segments } = Astro.props;
---

<section class="bg-white py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-center text-2xl font-semibold lg:text-3xl">
      Qui√©nes son nuestros clientes
    </h2>
    <div class="mt-10 grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {segments.map((segment, index) => (
        <div
          class:list={[
            "rounded-lg px-6 py-5 text-center text-sm font-medium text-white",
            "skew-x-[-8deg]",
            index % 2 === 0 ? "bg-primary" : "bg-red-700",
          ]}
        >
          <span class="block skew-x-[8deg] leading-relaxed">{segment}</span>
        </div>
      ))}
    </div>
  </div>
</section>
